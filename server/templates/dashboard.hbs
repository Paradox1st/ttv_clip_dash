{{#extend "base"}}

{{#content "container_body"}}
<div class="d-flex flex-row profile rounded-lg">
    <div class="profile-picture">
        <img class="rounded-circle" src='{{user.img}}'>
    </div>
    <div class="profile-name align-items-center">
        <h1>{{user.dispname}}</h1>
    </div>
    <div class="d-flex justify-content-end ml-auto align-items-center">
        <a href="/manage">
            <button class="btn btn-primary">Manage</button>
        </a>
    </div>
</div>

<h1 class="text-light">My Clips</h1>
<div class="d-flex rounded-lg">
    {{#embed "clip" clips=user_clips}}
    {{/embed}}
</div>

<h1 class="text-light">Followed Channel Clips</h1>
{{#followed_clips as |channel_clips|}}
<div class="d-flex rounded-lg">
    {{#embed "clip" clips=channel_clips}}
    {{/embed}}
</div>
{{/followed_clips}}

{{/content}}

{{#content "footer" mode="append"}}
<link rel="stylesheet" href="CSS/dashboard.css">
{{/content}}

{{/extend}}